{
  "customSyntax": "postcss-syntax",
  "plugins": ["stylelint-order"],
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "mixin",
          "if",
          "for",
          "include"
        ]
      }
    ],
    "string-quotes": "single",
    "order/properties-alphabetical-order": true,
    "font-family-name-quotes": null,
    "selector-class-pattern": "^([a-zA-Z][a-zA-Z0-9])||(_[a-z])+$"
  },
  "ignoreFiles": ["**/node_modules/**", "styles/generic/**"]
}
